<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="max-width: 450px; width: 100%; border-radius: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 text-primary">Cadastrar Vaga</h3>
            <form method="post" action="/empresa/vagas/criar">
                
                <div class="my-3">
                    <label for="id-input-titulo" class="form-label">Título da Vaga</label>
                    <input type="text" name="titulo" id="id-input-titulo" class="form-control"
                        placeholder="Digite o título da vaga" required>
                </div>

                <div class="my-3">
                    <label for="id-input-descricao" class="form-label">Descrição da Vaga</label>
                    <textarea name="descricao" id="id-input-descricao" class="form-control" rows="4"
                        placeholder="Descreva as responsabilidades e requisitos da vaga" required></textarea>
                </div>

                <div class="my-3">
                    <label for="id-input-salario" class="form-label">Salário</label>
                    <input type="number" name="salario" id="id-input-salario" class="form-control"
                        placeholder="Digite o valor do salário (opcional)" step="0.01">
                </div>

                <div class="my-3">
                    <label for="id-input-quantidade" class="form-label">Quantidade de Vagas</label>
                    <input type="number" name="quantidade" id="id-input-quantidade" class="form-control"
                        placeholder="Número de vagas disponíveis" required>
                </div>

                <div class="my-4">
                    <button type="submit" class="btn btn-primary w-100" style="padding: 12px; font-size: 16px; border-radius: 10px;">Cadastrar Vaga</button>
                </div>

                <div class="text-center my-3">
                    <a href="/empresa/vagas" class="btn btn-link text-decoration-none" style="color: #007bff;">Voltar para as vagas</a>
                </div>
            </form>
        </div>
    </div>
</div>

