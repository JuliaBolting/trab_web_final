<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaga: {{vagas.titulo}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .main-container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            max-width: 1200px;
            margin: 50px auto;
        }

        .sidebar {
            width: 200px;
        }

        .content {
            flex-grow: 1;
            max-width: 800px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .notifications {
            width: 250px;
        }
    </style>
</head>

<body>
    <div class="row text-center my-3">
        <div>
            <h1>LinkadIn</h1>
            <h1>Talentos e Oportunidades</h1>
        </div>
    </div>
    <div class="container main-container">
        <!-- Sidebar Esquerda -->
        <div class="sidebar">
            <button class="btn btn-primary w-100 mb-2">Vagas</button>
            <form action="/empresa/vagas/cadastrar" method="get">
                <a href="/empresa/vagas/cadastrar">
                    <button type="submit" class="btn btn-outline-primary w-100">Cadastrar Vaga</button>
                </a>
            </form>
        </div>

        <!-- Vaga e Candidatos -->
        <div class="content">
            <h2 class="text-center">{{vagas.titulo}}</h2>
            <p><strong>Descrição:</strong> {{vagas.descricao}}</p>
            <p><strong>Quantidade de Vagas:</strong> {{vagas.quantidade}}</p>
            <p><strong>Horário:</strong> {{vagas.horario}}</p>
            <p><strong>Preço:</strong> {{#if vagas.preco}}{{vagas.preco}}{{else}}Não especificado{{/if}}</p>

            <h3>Candidatos</h3>
            <label for="filtroCandidatos">Filtrar candidatos:</label>
            <select id="filtroCandidatos" class="form-control" onchange="filtrarCandidatos()">
                <option value="todos">Todos</option>
                <option value="disponiveis">Disponíveis para trabalho</option>
                <option value="reprovados">Reprovados</option>
                <option value="contatados">Contatados</option>
                <option value="agendados">Entrevista Agendada</option>
                <option value="aprovados">Aprovados</option>
            </select>

            <div id="listaCandidatos">
                {{#each vagas.candidatos}}
                <div class="candidate-card mb-3">
                    <p><strong>{{this.nome}}</strong></p>
                    <a href="/empresa/candidato/{{this.id}}" class="btn btn-info">Ver Currículo</a>
                    <button class="btn btn-danger"
                        onclick="reprovarCandidato({{this.id}}, {{vagas.id}})">Reprovar</button>
                    <button class="btn btn-warning" onclick="entrarEmContato({{this.id}}, {{vagas.id}})">Entrar em
                        Contato</button>
                    <button class="btn btn-primary" onclick="agendarEntrevista({{this.id}}, {{vagas.id}})">Agendar
                        Entrevista</button>
                    <button class="btn btn-success"
                        onclick="aprovarCandidato({{this.id}}, {{vagas.id}})">Aprovar</button>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <script>
        function filtrarCandidatos() {
            const filtro = document.getElementById('filtroCandidatos').value;
            window.location.href = `/empresa/vaga/{{vagas.id}}/candidatos?filtro=${filtro}`;
        }

        function reprovarCandidato(candidatoId, vagaId) {
            fetch(`/empresa/vaga/${vagaId}/reprovar/${candidatoId}`, {
                method: 'POST'
            }).then(function (response) {
                return response.json();
            }).then(function (data) {
                if (data.success) {
                    alert('Candidato reprovado!');
                    location.reload();
                }
            });
        }

        function entrarEmContato(candidatoId, vagaId) {
            const mensagem = prompt('Digite a mensagem para o candidato:');
            if (mensagem) {
                fetch(`/empresa/vaga/${vagaId}/contatar/${candidatoId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mensagem })
                }).then(function (response) {
                    return response.json();
                }).then(function (data) {
                    if (data.success) {
                        alert('Mensagem enviada!');
                    }
                });
            }
        }

        function agendarEntrevista(candidatoId, vagaId) {
            const data = prompt('Digite a data e hora da entrevista (ex: 20/02/2025 14:00):');
            const local = prompt('Digite o local da entrevista:');
            if (data && local) {
                fetch(`/empresa/vaga/${vagaId}/agendar/${candidatoId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ data, local })
                }).then(function (response) {
                    return response.json();
                }).then(function (data) {
                    if (data.success) {
                        alert('Entrevista agendada!');
                    }
                });
            }
        }

        function aprovarCandidato(candidatoId, vagaId) {
            fetch(`/empresa/vaga/${vagaId}/aprovar/${candidatoId}`, {
                method: 'POST'
            }).then(function (response) {
                return response.json();
            }).then(function (data) {
                if (data.success) {
                    alert('Candidato aprovado!');
                    location.reload();
                }
            });
        }

    </script>
</body>
</html>