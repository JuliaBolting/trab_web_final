<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="max-width: 450px; width: 100%; border-radius: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 text-primary">Esqueci minha senha</h3>
            <form method="post" action="/usuario/password">
                
                <div class="my-3">
                    <label for="id-input-email" class="form-label">E-mail</label>
                    <input type="email" name="email" id="id-input-email" class="form-control"
                        placeholder="Digite o seu e-mail para recuperação" required>
                </div>

                <div class="my-4">
                    <button type="submit" class="btn btn-primary w-100" style="padding: 12px; font-size: 16px; border-radius: 10px;">Enviar Link de Recuperação</button>
                </div>

                <div class="text-center my-3">
                    <a href="/" class="btn btn-link text-decoration-none" style="color: #007bff;">Voltar ao Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

