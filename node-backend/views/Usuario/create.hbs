<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="max-width: 450px; width: 100%; border-radius: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 text-primary">Criar Conta</h3>
            <form method="post" action="/usuario/create">
                
                <div class="my-3">
                    <label for="id-input-nome" class="form-label">Nome Completo</label>
                    <input type="text" name="nome" id="id-input-nome" class="form-control"
                        placeholder="Digite o seu nome completo" required>
                </div>

                <div class="my-3">
                    <label for="id-input-email" class="form-label">E-mail</label>
                    <input type="email" name="email" id="id-input-email" class="form-control"
                        placeholder="Digite o seu e-mail" required>
                </div>

                <div class="my-3">
                    <label for="id-input-senha" class="form-label">Senha</label>
                    <input type="password" name="senha" id="id-input-senha" class="form-control"
                        placeholder="Digite a sua senha" required>
                </div>

                <input type="hidden" name="tipo" value="candidato">

                <div class="my-4">
                    <button type="submit" class="btn btn-primary w-100" style="padding: 12px; font-size: 16px; border-radius: 10px;">Criar Conta</button>
                </div>

                <div class="text-center my-3">
                    <a href="/" class="btn btn-link text-decoration-none" style="color: #007bff;">Já tem uma conta? Faça login</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>