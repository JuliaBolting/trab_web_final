<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="max-width: 450px; width: 100%; border-radius: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 text-primary">Redefinir Senha</h3>

            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success" role="alert">
                {{success}}
            </div>
            {{/if}}

            <form method="post" action="/usuario/new-password">
                <input type="hidden" name="id" value="{{usuario.id}}">

                <div class="my-3">
                    <label for="id-input-senha" class="form-label">Nova Senha</label>
                    <input type="password" name="senha" id="id-input-senha" class="form-control"
                        placeholder="Digite sua nova senha" required>
                </div>

                <div class="my-3">
                    <label for="id-input-confirmar-senha" class="form-label">Confirmar Nova Senha</label>
                    <input type="password" name="confirmarSenha" id="id-input-confirmar-senha" class="form-control"
                        placeholder="Confirme sua nova senha" required>
                </div>

                <div class="my-4">
                    <button type="submit" class="btn btn-primary w-100"
                        style="padding: 12px; font-size: 16px; border-radius: 10px;">Atualizar Senha</button>
                </div>

                <div class="text-center my-3">
                    <a href="/" class="btn btn-link text-decoration-none" style="color: #007bff;">Voltar ao Login</a>
                </div>
            </form>

        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        const senha = document.getElementById('id-input-senha').value;
        const confirmarSenha = document.getElementById('id-input-confirmar-senha').value;

        if (senha !== confirmarSenha) {
            e.preventDefault();
            alert('As senhas n√£o coincidem! Por favor, tente novamente.');
        }
    });
</script>